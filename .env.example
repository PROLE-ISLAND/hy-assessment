# =====================================================
# HY Assessment Environment Variables
# =====================================================

# Supabase
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# OpenAI (for AI analysis)
OPENAI_API_KEY=your-openai-api-key

# App URL (for email links)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Email (Resend)
# Get your API key from https://resend.com/
RESEND_API_KEY=re_xxxxxxxxxxxxx
EMAIL_FROM=HY Assessment <noreply@yourdomain.com>
EMAIL_REPLY_TO=support@yourdomain.com

# Async Processing (Inngest)
# Set to 'true' to enable async analysis processing
USE_ASYNC_ANALYSIS=false
# For production, set these keys from https://www.inngest.com/
INNGEST_SIGNING_KEY=your-signing-key
INNGEST_EVENT_KEY=your-event-key

# Sentry (Error Tracking)
# Get your DSN from https://sentry.io/
NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx
# For source map uploads (optional, for production)
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=hy-assessment
SENTRY_AUTH_TOKEN=sntrys_xxxxx
